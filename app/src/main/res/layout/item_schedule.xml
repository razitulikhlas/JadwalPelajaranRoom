<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="15dp"
    android:elevation="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/tv_day"
            android:layout_alignParentEnd="true"
            android:text="@string/senin"
            android:fontFamily="@font/pregular"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_name_schedule"
            android:layout_marginStart="8dp"
            android:text="@string/bahasa_inggris"
            android:fontFamily="@font/pregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_day"
            android:maxLines="1"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentStart="true"
            android:ellipsize="end"/>
        <TextView
        android:id="@+id/tv_teacher_name"
        android:text="@string/hidayatul_sidiq"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/pregular"
            android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_schedule"/>
        <TextView
            android:layout_marginStart="8dp"
            android:fontFamily="@font/pregular"
            android:textSize="13sp"
            android:id="@+id/tv_time"
            android:text="@string/_10_00_12_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teacher_name"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>